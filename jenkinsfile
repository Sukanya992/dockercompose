pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Sukanya992/dockercompose.git'
            }
        }
        
        stage('Build and Start Containers') {
            steps {
                script {
                    
                    sh "docker-compose compose.yml up "
                }
            }
        }
        
        stage('Test Containers') {
            steps {
                script {
                    sh "docker ps"
                }
            }
        }
        
        
    }
}
