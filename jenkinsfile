pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 
            }
        }
        
        stage('Build and Start Containers') {
            steps {
                script {
                    
                    sh """
                        docker-compose compose.yml up -d
                    """
                }
            }
        }
        
        stage('Test Containers') {
            steps {
                script {
                    sh "docker ps"
                }
            }
        }
        
        
    }
}
